@model List<CarRentalFrontEnd.Models.VehicleTypeModel>
@using System.Security.Claims

@{
    var user = User; // Current logged-in user
}

<div class="dashboard-card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="card-title">@(ViewData["PageTitle"])</h2>

        @if (user.IsInRole("Admin"))
        {
            <a class="btn btn-success" href="@Url.Action("AddEdit", "VehicleType")">
                <i class="fas fa-plus me-2"></i>Add Vehicle Type
            </a>
        }
    </div>

    <div class="card-body p-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Type Name</th>
                        @if (user.IsInRole("Admin")) {
                            <th>User</th>
                        }
                        @if (user.IsInRole("Admin")){
                                <th>Created</th>}
                        @if (user.IsInRole("Admin")) {
                            <th> Modified </th >}
                        @if (user.IsInRole("Admin"))
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var vehicleType in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-car-side text-muted me-2"></i>
                                        <span>@vehicleType.TypeName</span>
                                    </div>
                                </td>
                                @if (user.IsInRole("Admin")){

                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user text-muted me-2"></i>
                                        <span>@vehicleType.UserId</span>
                                    </div>
                                </td>
                                }
                                @if (user.IsInRole("Admin"))
                                {

                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-calendar-alt text-muted me-2"></i>
                                            <span>@(vehicleType.Created?.ToString("yyyy-MM-dd") ?? "-")</span>
                                        </div>
                                    </td>
                                }
                                @if (user.IsInRole("Admin")){

                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-clock text-muted me-2"></i>
                                        <span>@vehicleType.Modified.ToString("yyyy-MM-dd")</span>
                                    </div>
                                </td>
                                }
                                @if (user.IsInRole("Admin"))
                                {
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="@Url.Action("AddEdit", "VehicleType", new { id = vehicleType.VehicleTypeId })"
                                               class="btn btn-sm" style="background: rgba(245, 158, 11, 0.2); color: #f59e0b; border: 1px solid rgba(245, 158, 11, 0.3);">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "VehicleType", new { id = vehicleType.VehicleTypeId })"
                                               onclick="return confirm('Are you sure you want to delete this vehicle type?')"
                                               class="btn btn-sm" style="background: rgba(239, 68, 68, 0.2); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.3);">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="@(user.IsInRole("Admin") ? 5 : 4)" class="text-center">
                                No vehicle types found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
