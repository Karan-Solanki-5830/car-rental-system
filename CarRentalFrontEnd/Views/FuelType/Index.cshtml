@model List<CarRentalFrontEnd.Models.FuelTypeModel>
@{ var isAdmin = User.IsInRole("Admin"); }

<div class="dashboard-card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="card-title">@(ViewData["PageTitle"])</h2>
        @if (isAdmin) {
            <a class="btn btn-success" href="@Url.Action("AddEdit", "FuelType")">
                <i class="fas fa-plus me-2"></i>Add Fuel Type
            </a>
        }
    </div>
    
    <div class="card-body p-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Fuel Name</th>
                        @if (isAdmin) {<th>User</th>
                        }
                        @if (isAdmin) {<th>Created</th>
                        }
                        @if (isAdmin)
                        {
                            <th>Modified</th>
                        }
                        @if (isAdmin) { <th>Actions</th>; }
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var fuel in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-gas-pump text-muted me-2"></i>
                                        <span>@fuel.FuelName</span>
                                    </div>
                                </td>
        @if (isAdmin)
        {
                                    <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user text-muted me-2"></i>
                                        <span>@fuel.UserId</span>
                                    </div>
                                </td>
        }
        @if (isAdmin)
        {
                                    <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-calendar-alt text-muted me-2"></i>
                                        <span>@(fuel.Created?.ToString("yyyy-MM-dd") ?? "-")</span>
                                    </div>
                                </td>
        }
        @if (isAdmin)
        {
                                    <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-clock text-muted me-2"></i>
                                        <span>@fuel.Modified.ToString("yyyy-MM-dd")</span>
                                    </div>
                                </td>
        }
                                @if (isAdmin) {
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="@Url.Action("AddEdit", "FuelType", new { id = fuel.FuelTypeId })" 
                                               class="btn btn-sm" style="background: rgba(245, 158, 11, 0.2); color: #f59e0b; border: 1px solid rgba(245, 158, 11, 0.3);">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "FuelType", new { id = fuel.FuelTypeId })" 
                                               onclick="return confirm('Are you sure you want to delete this fuel type?')"
                                               class="btn btn-sm" style="background: rgba(239, 68, 68, 0.2); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.3);">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No fuel types found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
