@model CarRentalFrontEnd.Models.MaintenanceModel

@{
    ViewBag.Title = Model.Id == 0 ? "Add Maintenance Log" : "Edit Maintenance Log";
}

<div class="dashboard-card mb-4">
    <div class="card-header">
        <h2 class="card-title">@(Model.Id == 0 ? "Add" : "Edit") Maintenance Log</h2>
    </div>
    
    <div class="card-body p-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <form method="post" asp-action="AddEdit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Created" />
            <input type="hidden" asp-for="Modified" />

            <div class="form-group mb-4">
                <label asp-for="VehicleId" class="form-label text-muted">Vehicle</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-dark text-muted">
                        <i class="fas fa-car"></i>
                    </span>
                    <select asp-for="VehicleId" class="form-select bg-dark border-dark text-light" asp-items="ViewBag.Vehicles">
                        <option value="">-- Select Vehicle --</option>
                    </select>
                </div>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="UserId" class="form-label text-muted">User</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-dark text-muted">
                        <i class="fas fa-user"></i>
                    </span>
                    <select asp-for="UserId" class="form-select bg-dark border-dark text-light" asp-items="ViewBag.Users">
                        <option value="">-- Select User --</option>
                    </select>
                </div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Description" class="form-label text-muted">Description</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-dark text-muted">
                        <i class="fas fa-tools"></i>
                    </span>
                    <textarea asp-for="Description" class="form-control bg-dark border-dark text-light" rows="3" placeholder="Enter maintenance description"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ServiceDate" class="form-label text-muted">Service Date</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-dark text-muted">
                        <i class="fas fa-calendar-day"></i>
                    </span>
                    <input asp-for="ServiceDate" type="datetime-local" class="form-control bg-dark border-dark text-light" />
                </div>
                <span asp-validation-for="ServiceDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Cost" class="form-label text-muted">Cost</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-dark text-muted">
                        <i class="fas fa-dollar-sign"></i>
                    </span>
                    <input asp-for="Cost" type="number" step="0.01" class="form-control bg-dark border-dark text-light" placeholder="Enter cost amount" />
                </div>
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
