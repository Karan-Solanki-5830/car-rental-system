@model List<CarRentalFrontEnd.Models.BookingModel>
@{ var isAdmin = User.IsInRole("Admin"); }

<div class="dashboard-card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="card-title">@(ViewData["PageTitle"])</h2>
        @if (isAdmin)
        {
            <a class="btn btn-success" href="@Url.Action("AddEdit", "Booking")">
                <i class="fas fa-plus me-2"></i>Add Booking
            </a>
        }
    </div>
    
    <div class="card-body p-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        @if (isAdmin) {<th>Booking ID</th> ;}
                        @if (isAdmin) { <th>Customer</th> ;}
                        <th>Vehicle</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        @if (isAdmin) {<th>Created</th>; }
                        @if (isAdmin) { <th>Actions</th>; }
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var booking in Model)
                        {
                            <tr>
                                @if (isAdmin){
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-bookmark text-muted me-2"></i>
                                        <span>@booking.BookingId</span>
                                    </div>
                                </td>
                                }
                                @if (isAdmin){
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user text-muted me-2"></i>
                                        <span>@booking.CustomerId</span>
                                    </div>
                                </td>
                                }
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-car-side text-muted me-2"></i>
                                        <span>@(string.IsNullOrWhiteSpace(booking.VehicleBrand) && string.IsNullOrWhiteSpace(booking.VehicleModel) 
                                            ? ($"Vehicle #" + booking.VehicleId)
                                            : ($"{booking.VehicleBrand} {booking.VehicleModel}"))</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-calendar-plus text-muted me-2"></i>
                                        <span>@booking.StartDateTime.ToString("g")</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-calendar-minus text-muted me-2"></i>
                                        <span>@booking.EndDateTime.ToString("g")</span>
                                    </div>
                                </td>
                                <td>
                                    @if (booking.Status == "Confirmed")
                                    {
                                        <span class="status-badge" style="background: rgba(16, 185, 129, 0.2); color: #10b981; border: 1px solid rgba(16, 185, 129, 0.3);">
                                            <i class="fas fa-check-circle me-1"></i> @booking.Status
                                        </span>
                                    }
                                    else if (booking.Status == "Pending")
                                    {
                                        <span class="status-badge" style="background: rgba(245, 158, 11, 0.2); color: #f59e0b; border: 1px solid rgba(245, 158, 11, 0.3);">
                                            <i class="fas fa-clock me-1"></i> @booking.Status
                                        </span>
                                    }
                                    else if (booking.Status == "Cancelled")
                                    {
                                        <span class="status-badge" style="background: rgba(239, 68, 68, 0.2); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.3);">
                                            <i class="fas fa-times-circle me-1"></i> @booking.Status
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge" style="background: rgba(59, 130, 246, 0.2); color: #3b82f6; border: 1px solid rgba(59, 130, 246, 0.3);">
                                            <i class="fas fa-info-circle me-1"></i> @booking.Status
                                        </span>
                                    }
                                </td>
                                @if (isAdmin){
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-calendar-alt text-muted me-2"></i>
                                        <span>@(booking.Created?.ToString("yyyy-MM-dd HH:mm") ?? "-")</span>
                                    </div>
                                </td>
                                }
                                @if (isAdmin) {
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="@Url.Action("AddEdit", "Booking", new { id = booking.BookingId })" 
                                               class="btn btn-sm" style="background: rgba(245, 158, 11, 0.2); color: #f59e0b; border: 1px solid rgba(245, 158, 11, 0.3);">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Booking", new { id = booking.BookingId })" 
                                               onclick="return confirm('Are you sure you want to delete this booking?')"
                                               class="btn btn-sm" style="background: rgba(239, 68, 68, 0.2); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.3);">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">No bookings found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
