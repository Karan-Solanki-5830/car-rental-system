@model List<CarRentalFrontEnd.Models.PaymentModel>

@{
    var isAdmin = User.IsInRole("Admin");
}

<div class="dashboard-card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="card-title">@(ViewData["PageTitle"])</h2>
        @if (isAdmin) {
            <a class="btn btn-success" asp-action="AddEdit">
                <i class="fas fa-plus me-2"></i>Add Payment
            </a>
        }
    </div>

    <div class="card-body p-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Booking</th>
                        <th>User</th>
                        <th>Amount</th>
                        <th>Method</th>
                        <th>Payment Date</th>
                        <th>Remarks</th>
                        <th>Created</th>
                        @if (isAdmin) { <th>Actions</th>; }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-receipt text-muted me-2"></i>
                                    <span>@p.PaymentId</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-book text-muted me-2"></i>
                                    <span>@p.BookingId</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user text-muted me-2"></i>
                                    <span>@p.UserId</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span>@p.Amount</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-credit-card text-muted me-2"></i>
                                    <span>@p.PaymentMethod</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-day text-muted me-2"></i>
                                    <span>@p.PaymentDate.ToString("yyyy-MM-dd HH:mm")</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-comment-dots text-muted me-2"></i>
                                    <span>@p.Remarks</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-alt text-muted me-2"></i>
                                    <span>@(p.Created?.ToString("yyyy-MM-dd HH:mm") ?? "-")</span>
                                </div>
                            </td>
                            @if (isAdmin) {
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="AddEdit" asp-route-id="@p.PaymentId"
                                           class="btn btn-sm"
                                           style="background: rgba(245, 158, 11, 0.2); color: #f59e0b; border: 1px solid rgba(245, 158, 11, 0.3);">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@p.PaymentId"
                                           onclick="return confirm('Are you sure you want to delete this payment?');"
                                           class="btn btn-sm"
                                           style="background: rgba(239, 68, 68, 0.2); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.3);">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
