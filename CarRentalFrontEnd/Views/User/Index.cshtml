@model List<CarRentalFrontEnd.Models.UserModel>
@{ var isAdmin = User.IsInRole("Admin"); }

<div class="dashboard-card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="card-title">@(ViewData["PageTitle"])</h2>
        @if (isAdmin) {
            <a class="btn btn-success" asp-action="AddEdit">
                <i class="fas fa-plus me-2"></i>Add User
            </a>
        }
    </div>
    
    <div class="card-body p-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 rounded-3 p-3 mb-4">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Created</th>
                        @if (isAdmin) { <th>Actions</th>; }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="user-avatar">
                                        @{
                                            var imagePath = !string.IsNullOrEmpty(u.ProfileImagePath) ? u.ProfileImagePath : "ProfileImages/default.jpg";
                                            var backendImageUrl = $"http://localhost:5075/{imagePath}";
                                        }
                                        <img src="@backendImageUrl" alt="@u.Name" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                                    </div>
                                    <p class="fw-bold mb-0">@u.Name</p>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-envelope text-muted me-2"></i>
                                    <span>@u.Email</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-phone text-muted me-2"></i>
                                    <span>@u.Phone</span>
                                </div>
                            </td>
                            <td>
                                @if (u.Role == "Admin")
                                {
                                    <span class="status-badge" style="background: rgba(16, 185, 129, 0.2); color: #10b981; border: 1px solid rgba(16, 185, 129, 0.3);">
                                        <i class="fas fa-user-shield me-1"></i> @u.Role
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge" style="background: rgba(59, 130, 246, 0.2); color: #3b82f6; border: 1px solid rgba(59, 130, 246, 0.3);">
                                        <i class="fas fa-user me-1"></i> @u.Role
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-alt text-muted me-2"></i>
                                    <span>@(u.Created?.ToString("yyyy-MM-dd") ?? "-")</span>
                                </div>
                            </td>
                            @if (isAdmin) {
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="AddEdit" asp-route-id="@u.UserId"
                                        class="btn btn-sm" style="background: rgba(245, 158, 11, 0.2); color: #f59e0b; border: 1px solid rgba(245, 158, 11, 0.3);">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@u.UserId"
                                        onclick="return confirm('Are you sure you want to delete this user?')"
                                        class="btn btn-sm" style="background: rgba(239, 68, 68, 0.2); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.3);">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
